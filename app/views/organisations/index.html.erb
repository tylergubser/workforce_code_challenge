</tr>
<h2>Organisations</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
      <td><%= organisation.name %></td>
      <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
        <td><%= link_to "Join", user_join_organisation_path(current_user, organisation_id: organisation.id) %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<h1>Adnat</h1>
<tr>
<td><% @user = User.find(session[:user_id]) %></td>
<td><%= "Logged in as #{@user.name} "%></td>
<td><%= link_to 'Logout', logout_path  %></td>
</tr>

<h3>Shifts</h3>

<table>
  <thead>
    <tr>
      <th colspan="3">Employee name</th>
      <th>Shift date</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th>Break length</th>
      <th>Hours worked</th>
      <th>Shift cost</th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
      <th><%= shift.user.name %></th>
      <th><%= shift.shift_date %></th>
      <th><%= shift.start %></th>
      <th><%= shift.finish %></th>
      <th><%= shift.break_length %></th>
      <th><%= (shift.finish - shift.start - shift.break_length) %><th>
      <th><%= (shift.finish - shift.start - shift.break_length * shift.organisation.hourly_rate) %><th>
      <th><
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift', new_shift_path %>
<%= link_to 'Back',  url_for(:back) %>
